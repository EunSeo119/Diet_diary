<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#D4B888"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#59646E">
        <TextView
            android:text="공지사항"
            android:layout_margin="25dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="제목"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_gravity="center"

        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="3px"
        android:background="#000000"
        />

    <TextView
        android:id="@+id/note1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="칼로리 계산 기능이 업데이트 되었습니다!"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:onClick="mOnPopupClick1"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#000000" />

    <TextView
        android:id="@+id/note2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="식단 추가 오류 업데이트 안내"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:onClick="mOnPopupClick2"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#000000" />

    <TextView
        android:id="@+id/note3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="새로운 기능 안내"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:onClick="mOnPopupClick3"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginBottom="63dp"
        android:background="#000000" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginBottom="63dp"
        android:background="#000000" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="3px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <Button
            android:id="@+id/homebutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/home1"
            android:scaleType="centerCrop"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/calender"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/calender"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/heart"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/heart"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/mypage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/human"
            app:backgroundTint="#000000"
            app:iconTint="#000000" />
    </LinearLayout>


</LinearLayout>