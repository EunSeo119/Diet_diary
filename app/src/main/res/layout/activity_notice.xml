<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#59646E">
        <TextView
            android:text="공지사항"
            android:layout_margin="25dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="목록"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_gravity="center"

        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="3px"
        android:background="#000000"
        />

    <TextView
        android:id="@+id/note1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="칼로리 계산 기능이 업데이트 되었습니다!"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:onClick="mOnPopupClick1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="2021.05.28"
        android:textSize="14sp"
        android:layout_gravity="right"
        android:onClick="mOnPopupClick1"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#000000" />

    <TextView
        android:id="@+id/note2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="식단 추가 오류 업데이트 안내"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:onClick="mOnPopupClick2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="2021.05.16"
        android:textSize="14sp"
        android:layout_gravity="right"
        android:onClick="mOnPopupClick1"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#000000" />

    <TextView
        android:id="@+id/note3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="새로운 기능 안내"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:onClick="mOnPopupClick3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="2021.04.27"
        android:textSize="14sp"
        android:layout_gravity="right"
        android:onClick="mOnPopupClick1"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginBottom="68dp"
        android:background="#000000" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="3px"
        android:background="#000000" />

    <Button
        android:id="@+id/mypagebut"
        android:text="뒤로가기"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        />


</LinearLayout>